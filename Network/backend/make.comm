CXXFLAGS+=-g -I./include -I../include -I../../include -I../libs -I../../libs

CPPS=$(shell ls *.cpp)
OBJS=$(patsubst %.cpp,%.o,${CPPS})

${BIN}:${OBJS} ${STATIC_LIBS}
	$(CXX) ${CXXFLAGS} -o $@ $^ ${SHARED_LIBS}

${CGI}:${OBJS} ${STATIC_LIBS}
	$(CXX) ${CXXFLAGS} -o $@ $^ ${SHARED_LIBS}

install:
	cp -f ${CGI} /usr/local/nginx/web_dev/cgi-bin/

clean:
	rm -f ${BIN} ${OBJS}
